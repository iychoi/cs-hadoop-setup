STARGATE_WORK="${STARGATE_WORK:-${DEFAULT_STARGATE_WORK}}"

DEFAULT_STARGATE_LIBS="${STARGATE_HOME}/libs/*:${STARGATE_HOME}/target/stargate-server-1.0.jar:${STARGATE_HOME}/target/dependency/*"
