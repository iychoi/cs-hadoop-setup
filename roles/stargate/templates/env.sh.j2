DEFAULT_TMUX_SESSION_NAME="STARGATE_SESSION"
TMUX_SESSION_NAME="${TMUX_SESSION_NAME:-${DEFAULT_TMUX_SESSION_NAME}}"

DEFAULT_STARGATE_LOG="{{ stargate_log_dir }}"
